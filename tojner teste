  <script>
    document.getElementById("tonerForm").addEventListener("submit", function (event) {
      event.preventDefault();

      var dataInput = document.getElementById("dataInput").value;
      var lojaInput = document.getElementById("lojaInput").value;
      var modeloInput = document.getElementById("modeloInput").value;
      var quantiaInput = document.getElementById("quantiaInput").value;
      var solicitanteInput = document.getElementById("solicitanteInput").value;

      var newRow = document.createElement("tr");
      newRow.innerHTML = `
        <td>${dataInput}</td>
        <td>${lojaInput}</td>
        <td>${modeloInput}</td>
        <td>${quantiaInput}</td>
        <td>${solicitanteInput}</td>
      `;

      document.getElementById("tonerTable").getElementsByTagName("tbody")[0].appendChild(newRow);

      document.getElementById("tonerForm").reset();
    });
  </script>
